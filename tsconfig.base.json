{
  "compilerOptions": {
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "moduleDetection": "force",
    "composite": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "esModuleInterop": false,
    "declaration": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "NodeNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": [],
    "isolatedModules": true,
    "sourceMap": true,
    "declarationMap": true,
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "noEmitOnError": false,
    "noErrorTruncation": false,
    "allowJs": false,
    "checkJs": false,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUncheckedIndexedAccess": false,
    "strictNullChecks": true,
    "baseUrl": ".",
    "target": "ES2022",
    "module": "NodeNext",
    "incremental": true,
    "removeComments": false,
    "plugins": [{ "name": "@effect/language-service" }],
    "paths": {
      "@template/domain": ["./packages/domain/src"],
      "@template/domain/*": ["./packages/domain/src/*"],
      "@template/domain/test/*": ["./packages/domain/test/*"],
      "@template/server": ["./packages/server/src"],
      "@template/server/*": ["./packages/server/src/*"],
      "@template/server/test/*": ["./packages/server/test/*"],
      "@template/database": ["./packages/database/src"],
      "@template/database/*": ["./packages/database/src/*"],
      "@template/database/test/*": ["./packages/database/test/*"],
      "@agent-hub/app": ["./packages/frontend/src/index.ts"],
      "@agent-hub/app/*": ["./packages/frontend/src/*"],
    },
  },
}
